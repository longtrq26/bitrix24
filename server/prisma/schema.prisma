generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BitrixToken {
  id           Int      @id @default(autoincrement())
  accessToken  String
  refreshToken String
  expiresIn    Int
  domain       String   @unique // Domain của Bitrix24 portal (e.g., yourcompany.bitrix24.com)
  memberId     String   @unique // ID duy nhất của thành viên/cổng
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
